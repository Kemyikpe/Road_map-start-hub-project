
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SignUp_Page">



    <TextView
        android:id="@+id/textView8"
        android:layout_width="91dp"
        android:layout_height="31dp"
        android:text="Sign Up"
        android:textSize="24sp"
        android:textColor="#83309A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="113dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView8"/>

    <EditText
        android:id="@+id/textView10"
        android:layout_width="350dp"
        android:layout_height="51dp"
        android:textSize="16sp"
        android:hint="Example@gmail.com"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:background="@drawable/border_sign_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView9"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="75dp"
        android:layout_height="31dp"
        android:textSize="16sp"
        android:text="Password"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="23dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView10"/>

    <EditText
        android:id="@+id/textView12"
        android:layout_width="350dp"
        android:layout_height="51dp"
        android:textSize="16sp"
        android:hint="Password"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:inputType="textPassword"
        android:background="@drawable/border_sign_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView11"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="141dp"
        android:layout_height="31dp"
        android:textSize="16sp"
        android:text="Confirm Password"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="23dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView12"/>

    <EditText
        android:id="@+id/textView14"
        android:layout_width="350dp"
        android:layout_height="51dp"
        android:textSize="16sp"
        android:hint="Confirm password"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:inputType="textPassword"
        android:background="@drawable/border_sign_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView13"/>

    <LinearLayout
        android:id="@+id/privacy"
        android:layout_width="365dp"
        android:layout_height="20dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView14">

            <TextView
                android:id="@+id/agreeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="By continuing you agree to our "
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/termsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Service"
                android:textColor="#83309A"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="and"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy policy"
        android:textColor="#83309A"
        android:textSize="14sp"
        android:layout_marginStart="150dp"
       app:layout_constraintTop_toBottomOf="@id/privacy"
      app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>